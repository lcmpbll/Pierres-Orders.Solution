@{
  Layout="_Layout";
}

<h1>Add a <strong>new order</strong> to @Model.Name</h1>

<form action="/vendors.@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="Model.Id">
  <label for="orderTitle">Order Title</label>
  <input id="orderTitle" name="OrderTitle" type="text">
  <label for="orderDescription">Order description</label>
  <input id="orderDescription" name="orderDescription" type="orderDescription" size="50">
  <label for="orderPrice">Order Total: $</label>
  <input id="orderPrice" name="orderPrice" type="number">
  <label for="orderDate">Delivery Date:</label>
  <input id="orderDate" name="orderDate" type="text" TextMode="Date">
  <button type="submit">Create Order</button>
</form>