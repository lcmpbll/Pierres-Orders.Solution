@{
  Layout = "_Layout";
}
<div class='container vendors__container'>
  @using PierresOrders.Models;
  <div class='vendors__header'>
    <h1>Vendors</h1>
  </div>
  <div class='vendors__none'>
    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added yet.</h3>
    }
  </div>
  <div class='vendors__list'>
    @foreach (Vendor vendor in Model)
    {
      <a href='/vendors/@vendor.Id'><button class='btn btn-primary'>@vendor.Name Details</button></a>
    }
  </div>
  <div class='vendors__addnew-button'>
    
    <a href="/vendors/new"><button class='btn btn-primary'>Add New Vendor</button></a> 
    
  </div>
</div>
