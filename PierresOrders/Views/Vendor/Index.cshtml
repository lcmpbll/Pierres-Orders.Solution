@{
  Layout = "_Layout";
}

@using PierresOrders.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet.</h3>
  <h4>Click <a href="/vendors/new">here</a> to add your first vendor</h4>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</h3>
}

<p><a href='/'>Back</p>