@{
  Layout = "_Layout";
}

@using PierresOrders.Models;



<h1>These are all the orders for @Model["vendor"].Name</h1>
<p>@Model["vendor"].Description</p>

<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/Orders/@order.Id'>@order.Title</a></li>
  }
</ol> 

<a href='/vendors/@Model["vendor"].Id/orders/new'><button class='btn btn-primary'>Add a new Order</button></a> 
<a href='/vendors'><button class='btn btn-primary'>View All Vendors</button></a>
<a href='/'><button class='btn btn-primary'>Return To Main Page</button></a>